generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Room {
  id        Int       @id @default(autoincrement())
  name      String
  capacity  Int
  bookings  Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  roomId    Int
  room      Room     @relation(fields: [roomId], references: [id])
  start     DateTime
  end       DateTime
  booker    String
  createdAt DateTime @default(now())

  @@index([roomId, start, end])
  @@unique([roomId, start, end])
}